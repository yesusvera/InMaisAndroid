<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="itspay.br.com.activity.FaleConoscoActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterMaxLength="13"
                android:layout_alignParentLeft="true">
            <EditText
            android:inputType="text"
            android:id="@+id/ed_seu_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seu Nome (Obrigatório)"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterMaxLength="13"
                android:layout_alignParentLeft="true">
            <EditText
            android:inputType="textEmailAddress"
            android:id="@+id/ed_seu_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seu Email (Obrigatório)"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterMaxLength="13"
                android:layout_alignParentLeft="true">
            <EditText
            android:inputType="phone"
            android:id="@+id/ed_seu_telefone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Seu Telefone (Obrigatório)"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:counterMaxLength="13"
                android:layout_alignParentLeft="true">
            <EditText
            android:id="@+id/ed_assunto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Assunto"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
            </android.support.design.widget.TextInputLayout>
            <TextView
            android:id="@+id/txt_sua_mensagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sua Mensagem"
            android:textSize="14sp"
            android:textStyle="bold"/>
            <EditText
            android:id="@+id/ed_mensagem"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
            <Button
            android:id="@+id/btn_salvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

    </LinearLayout>

    </ScrollView>
</RelativeLayout>
